{
    "name": "Average Calculator",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Average Calculator",
    "background": {
        "scripts": [
                        "background.js",
                        "jquery-3.3.1.min.js",
                        "content.min.js"
                   ]
    },
    "content_scripts" : [{
         "matches" : ["https://hcm10preview.sapsf.com/acme*",
                      "https://hcm10preview.sapsf.com/sf/pmreviews*",
                      "https://hcm10preview.sapsf.com/tgmEdit*"
                     ],
         "js" : [
                    "jquery-3.3.1.min.js",
                    "content.min.js"
                ],
         "run_at" : "document_end"
     }],
    "permissions": [
        "activeTab"
    ],
    "browser_action":{
        "default_title" : "Average Calculator",
        "default_icon" : "ext_icon.png"
    }
  }